<shortcuts>
    <skipIfNotSupported/>

    <programGroup
        defaultName="@product_name@"
        location="applications"/>

    <shortcut
        name="@product_name@"
        target="$INSTALL_PATH/@project_name@.exe"
        commandLine=""
        workingDirectory="$INSTALL_PATH"
        description="An Activator program."
        iconIndex="0"
        initialState="noShow"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        os='windows'>
    </shortcut>

    <shortcut
        name="Uninstall @product_name@"
        target="$INSTALL_PATH/Uninstaller/Transcription-uninstaller.jar"
        commandLine=""
        workingDirectory=""
        description="Uninstall @product_name@"
        iconFile="%SystemRoot%\system32\SHELL32.dll"
        iconIndex="32"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        type="Application"
        os='windows'
        encoding="UTF-8">
        <createForPack name="Activator" />
    </shortcut>

</shortcuts>